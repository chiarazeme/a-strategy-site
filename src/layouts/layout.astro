---
import "../styles/global.css";

const {
  title = "A-Strategy Agency – Strategy first, always",
  lang = "it",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta
      name="description"
      content="Strategic marketing in boutique form."
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Play:wght@400;500;600&family=Playfair+Display:wght@500;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- NAVBAR -->
    <header class="navbar">
  <div class="nav-inner">
    <a href="/" class="logo">A-Strategy</a>

   <button class="burger" aria-label="Apri menu">
  <span></span>
  <span></span>
  <span></span>
</button>

<div class="mobile-menu" aria-hidden="true">
  <nav>
    <a href="/">Home</a>
    <a href="/services">Services</a>
    <a href="/about">About</a>
    <a href="/collaborations">Collaborations</a>
    <a href="/contacts">Contacts</a>
  </nav>
</div>

</header>

<script>
  const burger = document.querySelector('.burger');
  const menu = document.querySelector('.mobile-menu');

  burger?.addEventListener('click', () => {
    menu.classList.toggle('is-open');
  });
</script>


    <!-- PAGE CONTENT -->
    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>A-Strategy Agency — Strategic marketing in boutique form</p>
    </footer>

    <!-- MOBILE MENU SCRIPT -->
    <script>
      const burger = document.getElementById("burger");
      const mobileMenu = document.getElementById("mobileMenu");

      burger.addEventListener("click", () => {
        mobileMenu.classList.toggle("open");
      });
    </script>
<script>
  const burger = document.querySelector('.burger');
  const mobileMenu = document.querySelector('.mobile-menu');

  if (burger && mobileMenu) {
    burger.addEventListener('click', () => {
      mobileMenu.classList.toggle('open');
    });
  }
</script>
<script type="module">
  const burger = document.querySelector(".burger");
  const mobileMenu = document.querySelector(".mobile-menu");

  if (burger && mobileMenu) {
    burger.addEventListener("click", () => {
      mobileMenu.classList.toggle("open");
    });
  }
</script>

  </body>
</html>
